{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "rootDir": "src",
        "jsx": "react-jsx",
        "types": ["node"],
    "outDir": "dist"
  },
  "include": ["src"]
}
